<div class="card">
    <div class="card-header">
        <h5 class="card-title float-left">{{post.title}}</h5>
        <h8 class="card-subtle mb-2 float-right">Posted By {{post.user.username}} on {{formatDate created_at}}</h6>
    </div>
    <div class="card-body">
            <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-body">
        {{> commentcard post.comments}}
    </div>
</div>

<input type="hidden" name="post-id" value="{{post.id}}"/>

{{#if loggedIn}}
<div class="d-flex flex-column flex-wrap ml-2">
    <button class="btn btn-danger" id="del-post-btn"><i class="bi bi-trash"></i>Delete Post</button>
    <a class="btn btn-secondary" href="/api/post/{{post.id}}"><i class="bi bi-pencil"></i>Edit Post</a>
</div>

<div class="card">
    <div class="card-header"></div>
    <form class="card-body" id="new-comment">
        <p class="form-label">Leave Comment:</p>
        <textarea class="form-input" id="comment" name="comment-body"></textarea>
        <button type="submit" class="btn btn-primary">Submit Comment</button>
    </form>
</div>
{{/if}}

<script src="/js/comment.js"></script>